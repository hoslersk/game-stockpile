<h1><%= @collection.name %></h1>

<h3>Games:</h3>

<ul id="all_videogames">
  <% @videogames.each do |videogame| %>
    <p><strong>Title: </strong><%= videogame.title %></p>
    <p><strong>Studio(s): </strong><%= videogame.studio %></p>
    <p><strong>Platform: </strong><%= videogame.platform %></p>
    <p><strong>Average Hours to Completion: </strong><%= videogame.avg_hours %></p>
    <p><strong>Metacritic Score: </strong><%= videogame.metacritic_score %></p><br>
  <% end %>
</ul>

<h3>Add Video Game to Collection:</h3>



<div id="new_videogame">
    <ul>
      <%= form_for(@videogame) do |f| %>
        <p><%= f.label :title %>
        <%= f.text_field :title %></p>
        <p><%= f.label :studio %>
        <%= f.text_field :studio %></p>
        <p><%= f.label :platform %>
        <%= f.text_field :platform %></p>
        <p><%= f.label "Average Hours to Completion" %>
        <%= f.text_field :avg_hours %></p>
        <p><%= f.label :metacritic_score %>
        <%= f.text_field :metacritic_score %></p><br>
        <%= f.submit "Add Video Game"%>
      <% end %>
    </ul>
</div>
